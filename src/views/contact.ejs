<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include ('partials/head') %>
    <title>Node.js</title>
</head>
<body>
    <%- include ('partials/navigation') %> 
    
    <div class="container vh-100 d-flex justify-content-center align-items-center">
            
        <div class="card bg-dark text-white text-center">
            <div class="card-header">
                <h3>Contact me</h3>
            </div>

            
            <div>
                <form class="card-body text-start">
                    <div class="mb-3">
                        <label for="email">Email</label>
                        <input type="email" id="email" placeholder="Escribe tu Email" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label for="mensaje">Mensaje</label>
                        <textarea name="mensaje" id="mensaje" rows="3" class="form-control" placeholder="Escribe tu consulta"></textarea>
                    </div>
                    <button class="btn btn-primary btn-block">
                        Enviar
                    </button>
                </form>
            </div>
        </div>
    </div>

    <%- include ('partials/footer') %>
</body>
</html>
